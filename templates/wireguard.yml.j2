services:
  # 1. WireGuard VPN
  wireguard:
    image: ghcr.io/wg-easy/wg-easy
    container_name: wireguard-app
    restart: unless-stopped
    depends_on:
      - ddns
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
    environment:
      - WG_HOST=vpn.{{ domain_name }}
      - PASSWORD_HASH={{ wireguard_password }}
      - WG_PORT=51820
      - PORT=80
      - WG_DEFAULT_ADDRESS=10.8.0.x
      - WG_DEFAULT_DNS=1.1.1.1
      - WG_MTU=1360
    volumes:
      - /opt/docker/wireguard:/etc/wireguard
    ports:
      # [CRITICAL CHANGE]
      # 1. We REMOVE "53:51820/udp" because sslh will now own Port 53 on the host.
      
      # 2. We keep the standard port so sslh can forward traffic here.
      - "51820:51820/udp"
      
      # 3. Keep your other backups
      - "443:51820/udp"
      - "80:51820/udp"
      - "4500:51820/udp"

# 2. Iodine (DNS Tunnel)
  iodine:
    image: spritsail/iodine:latest
    container_name: iodine
    restart: unless-stopped

    # [CRITICAL] Run on Host Network so 'dns0' is visible to the Kernel for routing
    network_mode: host
    
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    devices:
      - /dev/net/tun:/dev/net/tun
    command: >
      iodined -f -c -p 5353 -P {{ iodine_password }} 10.200.0.1 t.{{ domain_name }}

  # 3. Dynamic DNS Updater
  ddns:
    image: favonia/cloudflare-ddns:latest
    container_name: ddns
    restart: unless-stopped
    network_mode: host
    environment:
      - CLOUDFLARE_API_TOKEN={{ cloudflare_api_token }}
      - DOMAINS=vpn.{{ domain_name }}
      - PROXIED=false
      - IP6_PROVIDER=none